<div class="post-card-wrapper">
    {% for post in posts %}
        <div class="post-card">
            <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
                <section class="article-content">
                    <a href="{{post.link}}">
                        <div class="card-img-wrapper">
                            <div class="card-img" style="background-image: url({{ post.thumbnail.src("large") }})"></div>
                            <div class="comment">   
                                <span>{{ post.comments.count }}</span>
                                <i class="fas fa-comments"></i>
                            </div>
                        </div>                      
                        
                        <div class="body">
                            <h1 class="title">{{ post.title }}</h1>
                            <div class="details">
                                <span>Par</span> {{post.author.name}} <span>&bull;</span> {{ post.post_date|time_ago }}
                            </div>
                            {#<div class="content">
                                {{ post.preview|excerpt(25) }}
                            </div>#}
                        </div>
                    </a>
                </section>
            </article>
        </div>
    {% endfor %}
</div>
