<div class="container">
    <h1>Ã€ la une</h1>
    <div class="posts-wrapper">
        <div class="primary-post">
            <div class="post-card">
                {% set post = posts.0 %}
                {% block post_card %}       
                <article class="article-card post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
                    <a href="{{post.link}}">
                        <section class="article-content">
                            <div class="bg-img" style="background-image: url({{ post.thumbnail.src("large") }})"></div>
                            <div class="comment">   
                                <span>{{ post.comments.count }}</span>
                                <i class="fas fa-comments"></i>
                                <img src="/img/icons/chatbubbles-outline.svg">
                            </div>
                            <div class="body">
                                <h1 class="title">{{ post.title }}</h1>
                                <div class="details">
                                    <span>Par</span> {{post.author.name}} <span>&bull;</span> {{ post.post_date|time_ago }}
                                </div>
                            </div>
                        </section>
                    </a>
                </article>
                {% endblock %}
            </div>
        </div>
        <div class="secondary-post">
            <div class="post-card">{% set post = posts.1 %}{{ block('post_card') }}</div>
            <div class="post-card">{% set post = posts.2 %}{{ block('post_card') }}</div>
        </div>
    </div>
</div>




