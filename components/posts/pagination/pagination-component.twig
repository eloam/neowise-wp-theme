<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 m-auto my-10" aria-label="pagination">
    <div class="border-t border-gray-200 px-4 flex items-center justify-between sm:px-0 w-full">
        <div class="-mt-px w-0 flex-1 flex">
            {% if posts.pagination.prev %}
                <a href="{{posts.pagination.prev.link}}" class="border-t-2 border-transparent pt-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
                    <!-- Heroicon name: solid/arrow-narrow-left -->
                    <svg class="mr-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                    </svg>
                    Précédent
                </a>
            {% endif %}
        </div>

        {% for page in posts.pagination.pages %}
            {% if page.link %}
                <a href="{{page.link}}" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium">{{page.title}}</a>
            {% else %}
                <a href="{{page.link}}" class="border-red-500 text-red-600 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium" aria-current="page">{{page.title}}</a>
            {% endif %}
        {% endfor %}

        <div class="-mt-px w-0 flex-1 flex justify-end">
            {% if posts.pagination.next %}
                <a href="{{posts.pagination.next.link}}" class="border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
                    Suivant
                    <!-- Heroicon name: solid/arrow-narrow-right -->
                    <svg class="ml-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </a>
            {% endif %}
        </div>
    </div>
</nav>