<!-- Call-To-Action section -->
<div class="relative bg-gray-900">
  <div class="h-80 absolute inset-x-0 bottom-0 xl:top-0 xl:h-full">
    <div class="h-full w-full xl:grid xl:grid-cols-2">
      <div class="h-full xl:relative xl:col-start-2">
        <img class="h-full w-full object-cover opacity-25 xl:absolute xl:inset-0" src="https://images.unsplash.com/photo-1521737852567-6949f3f9f2b5?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2830&q=80&sat=-100" alt="People working on laptops">
        <div aria-hidden="true" class="absolute inset-x-0 top-0 h-32 bg-gradient-to-b from-gray-900 xl:inset-y-0 xl:left-0 xl:h-full xl:w-32 xl:bg-gradient-to-r"></div>
      </div>
    </div>
  </div>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:max-w-7xl lg:px-8 xl:grid xl:grid-cols-2 xl:grid-flow-col-dense xl:gap-x-8">
    <div class="relative pt-12 pb-64 sm:pt-24 sm:pb-64 xl:col-start-1 xl:pb-24">
      <p class="mt-3 text-3xl font-extrabold text-white">{{ title }}</p>
      <p class="mt-5 text-lg text-gray-300">{{ content }}</p>
      <form method="POST" action="#" class="nwsltr-header-signup mt-12 sm:mx-auto sm:flex">
        <input type="hidden" id="_wpnonce" name="_wpnonce" value="{{ wpNonceValue }}">
        <input type="hidden" name="action" value="nwsltr_signup">
        <div class="form min-w-0 flex-1">
          <label for="cta_email" class="sr-only">Votre adresse email</label>
          <input id="cta_email" name="email-address" type="email" class="block w-full border border-transparent rounded-md px-5 py-3 text-base text-gray-900 placeholder-gray-500 shadow-sm focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600" placeholder="Entrez votre adresse email" required>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-3">
          <input type="submit" class="input-button block w-full rounded-md border border-transparent px-5 py-3 bg-indigo-500 text-base font-medium text-white shadow hover:bg-indigo-400 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600 sm:px-10" value="{{ btnSubmitValue }}" data-value="{{ btnSubmitValue }}" data-alt-value="ğŸ“¬">
        </div>
      </form>
    </div>
  </div>
</div>